<h2>Profil bearbeiten</h2>
<%= simple_form_for(@profile, method: :patch) do |f| %>
<%= f.input :first_name, label: "Vorname" %>
<%= f.input :last_name, label: "Nachname" %>
<%= f.simple_fields_for :user do |g| %>
  <%= g.association :group, label: "Seminarfach" %>
<% end %>
<hr />
<%= f.button :submit, "Speichern" %>
<% end %>
