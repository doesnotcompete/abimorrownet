<%= simple_form_for(@content, method: :patch) do |f| %>
<%= f.input :title %>
<%= f.input :kind %>
<%= f.input :text, label: "Beschreibung (nutze für längere Texte den Dateiupload)"  %>
<%= f.file_field :file %>
<%= f.button :submit %>
<% end %>
<%= render partial: 'admin/deletable', locals: {model_name: "Inhalt", path: content_path(@content), hide_ruler: false} %>
