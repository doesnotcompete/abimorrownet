<h2>Einladung senden</h2>

<%= bootstrap_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

<% resource.class.invite_key_fields.each do |field| -%>
  <%= f.text_field field %>
<% end -%>

  <%= f.submit "Senden" %>
<% end %>
<hr />
<table id="invited-users-table", data-source="<%= invited_users_path(format: :json) %>">
  <thead>
    <tr>
      <th>E-Mail</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
